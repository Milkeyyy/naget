<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:naget.ViewModels"
		xmlns:lang="clr-namespace:naget.Assets.Locales;assembly=naget"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="60"
		x:Class="naget.Views.MainWindow"
		x:DataType="vm:MainWindowViewModel"
		Icon="/Assets/Icon.ico"
		Title="naget"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaChromeHints="NoChrome"
		ShowInTaskbar="False"
		ShowActivated="True"
		WindowStartupLocation="CenterScreen"
		CanResize="False"
		Topmost="True"
		SizeToContent="WidthAndHeight"
		MinWidth="800"
		MinHeight="20">

	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
			 to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Panel Margin="15">
		<Grid
			HorizontalAlignment="Stretch"
			VerticalAlignment="Center"
			ColumnDefinitions="Auto, *"
			RowDefinitions="*"
			ColumnSpacing="10"
		>
			<TextBlock
				Grid.Column="0"
				Grid.Row="0"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Text="{Binding CurrentSearchEngineName}"
				FontSize="14"
				FontWeight="Medium"
				MaxWidth="200"
				TextTrimming="CharacterEllipsis"
			/>

			<TextBox
				x:Name="searchtextbox"
				Grid.Column="1"
				Grid.Row="0"
				Text="{Binding SearchWord}"
				FontSize="20"
				FontWeight="Medium"
				Background="Transparent"
				BorderThickness="1"
			>
				<TextBox.KeyBindings>
					<KeyBinding Gesture="Enter" Command="{Binding SearchCommand}" />
				</TextBox.KeyBindings>
			</TextBox>
		</Grid>
	</Panel>
</Window>
