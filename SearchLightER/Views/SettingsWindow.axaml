<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:sty="using:FluentAvalonia.Styling"
		xmlns:ui="using:FluentAvalonia.UI.Controls"
		xmlns:vm="using:SearchLight.ViewModels"
		xmlns:lang="clr-namespace:SearchLight.Assets.Locales;assembly=SearchLight"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="SearchLight.Views.SettingsWindow"
		x:DataType="vm:SettingsWindowViewModel"
		Title="SettingsWindow"
		>

	<Design.DataContext>
		<vm:SettingsWindowViewModel/>
	</Design.DataContext>

	<NativeMenu.Menu>
		<NativeMenu>
			<NativeMenuItem Header="Settings">
				<NativeMenu>
					<NativeMenuItem Header="Option 1"   />
					<NativeMenuItem Header="Option 2"   />
					<NativeMenuItemSeparator />
					<NativeMenuItem Header="Option 3"  />
				</NativeMenu>
			</NativeMenuItem>
		</NativeMenu>
	</NativeMenu.Menu>

	<Panel Margin="0 48 0 0">
		<ui:NavigationView x:Name="navigationMenu" Height="NaN" PaneDisplayMode="Auto" IsSettingsVisible="False">
			<ui:NavigationView.MenuItems>
				<ui:NavigationViewItem Content="{x:Static lang:Resources.Settings_Tab_Design}" Tag="DesignView" IconSource="ColorFill" />
				<ui:NavigationViewItem Content="{x:Static lang:Resources.Settings_Tab_Search}" Tag="SearchView" IconSource="Zoom" />
				<ui:NavigationViewItem Content="{x:Static lang:Resources.Settings_Tab_ShortcutKey}" Tag="ShortcutKeyView" IconSource="Keyboard" />
				<ui:NavigationViewItem Content="{x:Static lang:Resources.Settings_Tab_InAppBrowser}" Tag="InAppBrowserView" IconSource="Globe" />
				<ui:NavigationViewItem Content="{x:Static lang:Resources.Settings_Tab_Update}" Tag="UpdateView" IconSource="Upload" />
				<ui:NavigationViewItem Content="{x:Static lang:Resources.Settings_Tab_System}" Tag="SystemView" IconSource="Repair" />
			</ui:NavigationView.MenuItems>
		</ui:NavigationView>
	</Panel>
</Window>
