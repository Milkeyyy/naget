<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:SearchLight.ViewModels.Settings"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="SearchLight.Views.Settings.ShortcutKeyPresetCreator"
			 x:DataType="vm:ShortcutKeyPresetCreatorViewModel"
	>
	<Design.DataContext>
		<vm:ShortcutKeyPresetCreatorViewModel/>
	</Design.DataContext>

	<StackPanel Orientation="Vertical">
		<TextBox Text="{Binding PresetName}" Margin="0 0 10 0"/>
	</StackPanel>
</UserControl>
